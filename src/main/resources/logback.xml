<configuration>
    <!-- Консольный компонент(аппендер) с паттерном -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Шаблон вывода сообщений лога: дата, время, поток, уровень логирования, имя логгера, сообщение -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Профили для сред -->
    <!-- Задаем уровень логирования для локальной среды -->
    <springProfile name="local">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>

    <!-- Для остальных сред, уровень логирования -->
    <springProfile name="!local">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>
</configuration>
